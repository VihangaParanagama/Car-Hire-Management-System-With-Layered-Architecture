<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="537.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.Car_Hire_Management.controller.LoginFormController">

    <!-- Background Image -->
    <ImageView fitHeight="539.0" fitWidth="967.0" layoutX="-3.0">
        <image>
            <Image url="@icons/Login (2).png" />
        </image>
    </ImageView>

    <Label layoutX="447.0" layoutY="123.0" text="Login" textFill="WHITE">
        <font>
            <!-- Importing custom font -->
            <Font name="System Bold" size="25.0" />
        </font>
    </Label>

    <Label layoutX="341.0" layoutY="196.0" text="Username" textFill="WHITE">
        <font>
            <Font name="Poppins" size="14.0" />
        </font>
    </Label>

    <TextField fx:id="userNameText" layoutX="338.0" layoutY="216.0" prefHeight="41.0" prefWidth="277.0" promptText="Type Your User Name" style="-fx-background-color: none; -fx-border-color: transparent transparent #fff transparent; -fx-background-insets: 0, 0, 1, 0; -fx-text-fill: #fff; -fx-alignment: center;">
        <font>
            <Font name="Poppins" size="14.0" />
        </font>
    </TextField>

    <Label layoutX="343.0" layoutY="292.0" text="Password" textFill="WHITE">
        <font>
            <Font name="Poppins" size="14.0" />
        </font>
    </Label>

    <Button layoutX="338.0" layoutY="400.0" mnemonicParsing="false" onAction="#userLoginButton" prefHeight="41.0" prefWidth="277.0" style="-fx-background-color: #2e86de;" text="Login" textFill="WHITE">
        <font>
            <Font name="Poppins" size="17.0" />
        </font>
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor>
    </Button>

    <ImageView layoutX="421.0" layoutY="405.0">
        <image>
            <Image url="@icons/login.png" />
        </image>
    </ImageView>

    <Label layoutX="338.0" layoutY="469.0" text="Don't have an account?" textFill="#efefef">
        <font>
            <Font name="Poppins" size="14.0" />
        </font>
    </Label>

    <Hyperlink layoutX="495.0" layoutY="466.0" onAction="#newUserRegisterHyperlink" prefHeight="24.0" prefWidth="124.0" text="Register here" textFill="WHITE">
        <font>
            <Font name="Poppins" size="14.0" />
        </font>
    </Hyperlink>
   <PasswordField fx:id="passwordText" layoutX="341.0" layoutY="342.0" prefHeight="26.0" prefWidth="278.0" promptText="Type Your Password" style="-fx-background-color: none; -fx-border-color: transparent transparent #fff transparent; -fx-background-insets: 0, 0, 1, 0; -fx-text-fill: #fff; -fx-alignment: center;">
      <font>
         <Font size="14.0" />
      </font>
   </PasswordField>


</AnchorPane>
